<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:dither="true"
            android:useLevel="false"
            android:visible="true">
            <gradient
                android:startColor="#fc3238 "
                android:endColor="#803dc3"
                android:angle="180"/>
            <corners
                android:radius="10dp"/>
            <size
                android:width="200dp"
                android:height="10dp" />

            <stroke
                android:width="18dp"
                android:color="#00ffffff"/>
        </shape>
    </item>
</layer-list>