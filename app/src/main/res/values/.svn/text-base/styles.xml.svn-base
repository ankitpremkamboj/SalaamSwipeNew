<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="Widget.MaterialProgressBar.ProgressBar.Horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <!--
        Disabled for correct behavior on Android 4.x
        <item name="android:progressDrawable">@null</item>
        -->
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="ColorPrimaryStyle">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--fonts style-->

    <style name="avenirLTStdBlack" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-Black.otf</item>
    </style>

    <style name="avenirLTStdBlackOblique" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-BlackOblique.otf</item>
    </style>

    <style name="avenirLTStdBook" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-Book.otf</item>
    </style>

    <style name="avenirLTStdBookOblique" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-BookOblique.otf</item>
    </style>

    <style name="avenirLTStdHeavy" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-Heavy.otf</item>
    </style>

    <style name="avenirLTStdHeavyOblique" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-HeavyOblique.otf</item>
    </style>

    <style name="avenirLTStdLightOblique" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/ AvenirLTStd-LightOblique.otf</item>
    </style>


    <style name="avenirLTStdMedium" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-Medium.otf</item>
    </style>

    <style name="avenirLTStdMediumOblique" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-MediumOblique.otf</item>
    </style>

    <style name="avenirLTStdOblique" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-Oblique.otf</item>
    </style>

    <style name="avenirLTStdRoman" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/AvenirLTStd-Roman.otf</item>
    </style>

    <style name="youreInvited" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/YoureInvited.otf</item>
    </style>

    <style name="youreInvitedHeavy" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/YoureInvitedHeavy.otf</item>
    </style>


    <style name="SwipeFling">
        <item name="rotation_degrees">15</item>
        <item name="min_adapter_stack">6</item>
        <item name="max_visible">4</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#80000000</item> <!-- Or any color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
