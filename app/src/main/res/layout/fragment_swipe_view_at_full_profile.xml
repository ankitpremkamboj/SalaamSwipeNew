<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/dp32"
    android:orientation="vertical">

    <!-- Footer -->
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_my_full_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--footer-->
    <LinearLayout
        android:id="@+id/linear_layout_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_marginTop="@dimen/dp12">

        <ImageView
            android:id="@+id/footer_indicator1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/image_switch_blank" />

        <ImageView
            android:id="@+id/footer_indicator2_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/footer_indicator1_iv"
            android:src="@drawable/image_switch_blank" />

        <ImageView
            android:id="@+id/footer_indicator3_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/footer_indicator2_iv"
            android:src="@drawable/image_switch_blank" />

        <ImageView
            android:id="@+id/footer_indicator4_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/footer_indicator3_iv"
            android:src="@drawable/image_switch_blank" />

        <ImageView
            android:id="@+id/footer_indicator5_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/footer_indicator4_iv"
            android:src="@drawable/image_switch_blank" />

    </LinearLayout>

</FrameLayout>