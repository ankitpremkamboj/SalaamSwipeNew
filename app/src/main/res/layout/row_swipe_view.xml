<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginLeft="@dimen/dp15"
    android:layout_marginRight="@dimen/dp15"
    android:layout_marginTop="@dimen/dp15"
    android:background="@drawable/transparent_rounded_vw">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_rounded_vw"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_rounded_vw">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/cardImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_405"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/home_placeholder"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/margin_10" />

        </FrameLayout>


    </LinearLayout>


    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_50"
        android:layout_margin="@dimen/dp30"
        android:alpha="0"
        android:background="@drawable/like_big"
        android:padding="@dimen/dp12" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_50"
        android:layout_gravity="right"
        android:layout_margin="@dimen/dp30"
        android:alpha="0"
        android:background="@drawable/dislike_big"
        android:padding="@dimen/dp12" />

</FrameLayout>