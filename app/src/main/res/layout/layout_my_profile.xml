    <FrameLayout
        android:id="@+id/my_profile_pic_fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp350"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:visibility="visible">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_rounded_vw">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/my_profile_pic_ci"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/home_placeholder"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/margin_10" />

        </FrameLayout>

        <!--<ImageView
            android:id="@+id/my_profile_pic_ci"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp10" />-->


        <ImageView
            android:id="@+id/my_profile_edit_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="@dimen/dp26"
            android:layout_marginLeft="@dimen/dp10"
            android:src="@drawable/edit_icon"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp20"
            android:padding="@dimen/dp10">

            <TextView
                android:id="@+id/my_profile_user_name_tv"
                style="@style/avenirLTStdHeavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp6"
                android:padding="@dimen/dp2"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_24sp" />

            <TextView
                android:id="@+id/my_profile_designation_tv"
                style="@style/avenirLTStdRoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_profile_user_name_tv"
                android:layout_marginLeft="@dimen/dp20"
                android:padding="@dimen/dp2"
                android:text="Product Desiginer"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/edu_tv"
                style="@style/avenirLTStdRoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_profile_user_name_tv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp2"
                android:layout_toRightOf="@+id/my_profile_designation_tv"
                android:padding="@dimen/dp2"
                android:text="at Tekmindz"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp"
                android:visibility="visible" />

        </RelativeLayout>
    </FrameLayout>
</FrameLayout>