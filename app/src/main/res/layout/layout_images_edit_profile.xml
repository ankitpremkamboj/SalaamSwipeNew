<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="horizontal"
        android:weightSum="2">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <com.soul.app.customui.RoundedImageViewForEditProfile
                android:id="@+id/profile_image_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp12"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginTop="@dimen/dp14"
                android:orientation="horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/rounded_edit_profile" />


            <ImageView
                android:id="@+id/delete_profile_pic_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/delete_pic"
                android:visibility="gone" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp12"
            android:layout_marginTop="@dimen/dp12"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.soul.app.customui.RoundedImageViewForEditProfile
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp85"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rounded_edit_profile" />

                    <ImageView
                        android:id="@+id/image_add_pic_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:background="@drawable/add_pic"
                        android:padding="@dimen/dp10"
                        android:visibility="invisible" />
                    <ImageView
                        android:id="@+id/image_delete_pic_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:background="@drawable/delete_pic"
                        android:padding="@dimen/dp10"
                        android:visibility="invisible" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.soul.app.customui.RoundedImageViewForEditProfile
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp85"
                        android:layout_marginLeft="@dimen/dp4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rounded_edit_profile" />

                    <ImageView
                        android:id="@+id/image_add_pic_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:background="@drawable/add_pic"
                        android:padding="@dimen/dp10"
                        android:visibility="invisible" />
                    <ImageView
                        android:id="@+id/image_delete_pic_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:background="@drawable/delete_pic"
                        android:padding="@dimen/dp10"
                        android:visibility="invisible" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/one"
                android:layout_marginTop="@dimen/dp4"
                android:orientation="horizontal"
                android:weightSum="2">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.soul.app.customui.RoundedImageViewForEditProfile
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp85"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rounded_edit_profile" />

                    <ImageView
                        android:id="@+id/image_add_pic_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:background="@drawable/add_pic"
                        android:padding="@dimen/dp10"
                        android:visibility="invisible" />
                    <ImageView
                        android:id="@+id/image_delete_pic_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:background="@drawable/delete_pic"
                        android:padding="@dimen/dp10"
                        android:visibility="invisible" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.soul.app.customui.RoundedImageViewForEditProfile
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp85"
                        android:layout_marginLeft="@dimen/dp4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rounded_edit_profile"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/image_add_pic_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:background="@drawable/add_pic"
                        android:padding="@dimen/dp10"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/image_delete_pic_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:background="@drawable/delete_pic"
                        android:padding="@dimen/dp10"
                        android:visibility="invisible" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>