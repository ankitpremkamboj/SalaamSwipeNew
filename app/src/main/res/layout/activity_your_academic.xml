<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.soul.app.activity.YourSectActivity">

    <include
        android:id="@+id/your_sect_outlook_header_tb"
        layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/your_sect_outlook_header_tb"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp41"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sunni_tv"
                    style="@style/avenirLTStdRoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/high_school_drop_out"
                    android:textColor="@color/colorDarkText" />

                <CheckBox
                    android:id="@+id/high_school_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/custom_checkbox"
                    android:padding="@dimen/margin_10" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:background="@color/colorLightDividerLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp41"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shia_tv"
                    style="@style/avenirLTStdRoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/high_school_equivalent"
                    android:textColor="@color/colorDarkText" />

                <CheckBox
                    android:id="@+id/high_school_equivalent_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/custom_checkbox"
                    android:padding="@dimen/margin_10" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:background="@color/colorLightDividerLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp41"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:orientation="vertical">

                <TextView
                    style="@style/avenirLTStdRoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/diploma_degree"
                    android:textColor="@color/colorDarkText" />

                <CheckBox
                    android:id="@+id/diploma_degree_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/custom_checkbox"
                    android:padding="@dimen/margin_10" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:background="@color/colorLightDividerLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp41"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:orientation="vertical">

                <TextView
                    style="@style/avenirLTStdRoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/bachelor_degree"
                    android:textColor="@color/colorDarkText" />

                <CheckBox
                    android:id="@+id/bachelor_degree_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/custom_checkbox"
                    android:padding="@dimen/margin_10" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:background="@color/colorLightDividerLine" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp41"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:orientation="vertical">

                <TextView
                    style="@style/avenirLTStdRoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/master_degree"
                    android:textColor="@color/colorDarkText" />

                <CheckBox
                    android:id="@+id/master_degree_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/custom_checkbox"
                    android:padding="@dimen/margin_10" />

            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp19"
                android:layout_marginRight="@dimen/dp19"
                android:background="@color/colorLightDividerLine" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
