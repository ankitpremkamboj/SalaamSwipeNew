<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/chat_header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chat_back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/ndp12"
                android:padding="@dimen/dp12"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_toRightOf="@+id/chat_back_icon"
                android:orientation="horizontal">

                <com.ak.ta.salaamswipe.customui.CircleImageView
                    android:id="@+id/chat_pic_ci"
                    android:layout_width="@dimen/dp32"
                    android:layout_height="@dimen/dp32"
                    android:layout_gravity="center"
                    android:background="@drawable/small_pic_placeholder" />

                <TextView
                    android:id="@+id/chat_user_name"
                    style="@style/avenirLTStdBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/matched_name"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp12"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_17sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/info_icon_iv"
                style="@style/avenirLTStdBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/dp10"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp12"
                android:paddingTop="@dimen/margin_5"
                android:src="@drawable/more_button"
                android:textSize="@dimen/text_size_15sp" />
        </RelativeLayout>
    </FrameLayout>


</LinearLayout>