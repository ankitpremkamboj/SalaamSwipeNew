<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_soul_logo" />

            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp80"
                android:background="@drawable/group_2">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp80">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/login_profile" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/join_text"
                style="@style/latoRagular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center_horizontal"
                android:text="Join a community of \n inspiring singles"
                android:textColor="#000000"
                android:textSize="@dimen/text_16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/join_text"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="@dimen/dp10">

                <LinearLayout
                    android:id="@+id/fb_login_ly"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/dp30"
                    android:layout_marginRight="@dimen/margin_30"
                    android:background="@drawable/cancel_selector_gradient"
                    android:gravity="center_horizontal|center_vertical">

                    <TextView
                        android:id="@+id/fb_login_tv"
                        style="@style/latoBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="0.07"
                        android:text="@string/login_with_facebook"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fb_login_ly"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        style="@style/latoRagular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/we_don_t_post_anything_to_facebook_n_by_signing_in_you_agree_to_our"
                        android:textColor="@color/color_B1B1B1"
                        android:textSize="@dimen/dp15" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/terms_of_services_tv"
                            style="@style/latoRagular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp2"
                            android:text="@string/terms_of_service"
                            android:textColor="@color/color_B1B1B1"
                            android:textSize="@dimen/dp15" />

                        <TextView
                            style="@style/latoRagular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" and  "
                            android:textColor="@color/color_B1B1B1"

                            android:textSize="@dimen/dp15" />

                        <TextView
                            android:id="@+id/privacy_policy_tv"
                            style="@style/latoRagular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp2"
                            android:text="@string/privacy_and_policy"
                            android:textColor="@color/color_B1B1B1"
                            android:textSize="@dimen/dp15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp15" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>